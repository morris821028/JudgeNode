<link rel="stylesheet" type="text/css" href="<%= site.url_for('stylesheets/shThemeDefault.css') %>" />
<%
	var uid = user.uid,
		pid = solution_config.config.pid,
		ttl = solution_config.config.ttl;
%>
<div class="header">
	<h1 class='article-title'>Solution Idea</h1>
    <h2><%- solution_config.config.pid + ". " + solution_config.config.ttl %></h2>
</div>
<div class="content">

<div class="pure-menu pure-menu-horizontal">

<ul class="pure-menu-list">
<% if (uid != undefined) { %>
	<li class="pure-menu-item"><a class="pure-menu-link" href='<%= site.url_for('submissions?pid=' + pid + '&uid=' + uid) %>'><%= __('My Status') %></a></li>
<% } %>
	<li class="pure-menu-item"><a class="pure-menu-link" href='<%= site.url_for('submissions?pid=' + pid) %>'><%= __('Status') %></a></li>
	<li class="pure-menu-item"><a class="pure-menu-link" href='<%= site.url_for('statistic/problem/0/' + pid) %>'><%= __('Statistics') %></a></li>
	<li class="pure-menu-item"><a class="pure-menu-link" href='<%= site.url_for('problem/0/' + pid) %>'><%= __('Problem') %></a></li>
<% if (user["uid"] >= 0 && user["class"] == null) { %>
	<li class="pure-menu-item"><a class="pure-menu-link" href='<%= site.url_for('admin/edit/problem/' + pid) %>'><%= __('Edit') %></a></li>
<% } %>
</ul>
</div>
<% if (solution_config.content) { %>
	<%- solution_config.content %>
<% } else { %>
	<h2><div class="sysmsg">解法思路未提供</div></h2>
<% } %>



</div>